# Database PostgreSQL
# Use DATABASE_URL para connection string (ex: NeonDB)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Ou use as variáveis individuais (para desenvolvimento local)
DB_HOST=localhost
DB_USER=postgres
DB_PASS=postgres
DB_NAME=postgres

# Database MongoDB
MONGO_URL=mongodb://localhost:27017/devburger

# JWT
JWT_SECRET=sua-chave-secreta-super-segura
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_sua-chave-stripe

# Server
PORT=3001

# Cloudinary
# Opção 1 (recomendada): conectar usando string única
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Opção 2: definir credenciais individualmente
CLOUDINARY_CLOUD_NAME=<cloud_name>
CLOUDINARY_API_KEY=<api_key>
CLOUDINARY_API_SECRET=<api_secret>

# URL pública da API (usada para montar links locais quando não há Cloudinary)
APP_URL=http://localhost:3001